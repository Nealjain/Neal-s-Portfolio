{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components": ["./app/_components/index.js"],
      "@/config": ["./app/_config/index.js"],
      "@/data": ["./app/_data/index.js"],
      "@/fonts": ["./app/_fonts/index.js"],
      "@/hooks": ["./app/_hooks/index.js"],
      "@/layout": ["./app/_layout/index.js"],
      "@/lib": ["./app/_lib/index.js"],
      "@/providers": ["./app/_providers/index.jsx"],
      "@/utils": ["./app/_utils/index.js"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
